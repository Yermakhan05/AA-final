<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.myfaith.fragment.HomeFragment"
        android:label="Home"
        tools:layout="@layout/home_page_fragment">

        <action
            android:id="@+id/action_homeFragment_to_quoteFragment"
            app:destination="@id/quoteFragment" />
    </fragment>

    <fragment
        android:id="@+id/quoteFragment"
        android:name="com.example.myfaith.fragment.QuoteFragment"
        android:label="Quote"
        tools:layout="@layout/fragment_quote">

        <action
            android:id="@+id/action_quoteFragment_to_favoritesFragment"
            app:destination="@id/favoritesFragment" />
    </fragment>

    <fragment
        android:id="@+id/favoritesFragment"
        android:name="com.example.myfaith.fragment.FavoritesFragment"
        android:label="Favorites"
        tools:layout="@layout/fragment_favorites">

        <action
            android:id="@+id/action_favoritesFragment_to_quoteFragment"
            app:destination="@id/quoteFragment" />
    </fragment>

    <fragment
        android:id="@+id/compassFragment"
        android:name="com.example.myfaith.fragment.CompassFragment"
        android:label="Compass"
        tools:layout="@layout/fragment_compass" />

    <fragment
        android:id="@+id/quranFragment"
        android:name="com.example.myfaith.fragment.QuranFragment"
        android:label="Quran"
        tools:layout="@layout/fragment_quran" />

    <fragment
        android:id="@+id/mapsFragment"
        android:name="com.example.myfaith.fragment.MapsFragment"
        android:label="Maps"
        tools:layout="@layout/fragment_maps" />

    <fragment
        android:id="@+id/booksFragment"
        android:name="com.example.myfaith.fragment.BooksFragment"
        android:label="Books">

        <action
            android:id="@+id/action_booksFragment_to_bookDetailFragment"
            app:destination="@id/bookDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/bookDetailFragment"
        android:name="com.example.myfaith.fragment.BookDetailFragment"
        android:label="BookDetail"
        tools:layout="@layout/fragment_book_detail">

        <!-- ВАЖНО: аргумент для SafeArgs -->
        <argument
            android:name="bookId"
            app:argType="integer" />
    </fragment>

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.myfaith.fragment.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/profile_fragment" />

    <fragment
        android:id="@+id/notificationFragment"
        android:name="com.example.myfaith.fragment.NotificationFragment"
        android:label="Notifications"
        tools:layout="@layout/notification_fragment" />

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.myfaith.fragment.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" />

    <fragment
        android:id="@+id/app_settings"
        android:name="com.example.myfaith.fragment.AppSettingsFragment"
        android:label="App Settings"
        tools:layout="@layout/fragment_app_settings" />

    <fragment
        android:id="@+id/eventsFragment"
        android:name="com.example.myfaith.fragment.EventsFragment"
        android:label="Events"
        tools:layout="@layout/fragment_events" />

    <fragment
        android:id="@+id/zikrFragment"
        android:name="com.example.myfaith.fragment.ZikrFragment"
        android:label="Zikr"
        tools:layout="@layout/activity_zikr" />
</navigation>